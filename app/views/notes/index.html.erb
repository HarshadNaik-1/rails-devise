<h1>Showing list of Notes</h1>

<table>
    <th>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>User</th>
            <th colspan="3">Actions</th>
        </tr>
    </th>

    <tbody>
        <% @notes.each do |note|%>
        <tr>
            <td><%= note.title%></td>
            <td><%= note.description%></td>
            <td><%= note.user.email%></td>
            <td><%= link_to  "  Show ", note_path(note)%></td>
            <% if note.user == current_user %>
            <td><%= link_to  "  Edit ", edit_note_path(note)%></td>
            <td><%= link_to  "  Delete ", note_path(note), method: :delete, data:{ confirm: "Are you sure?"}%></td>
            <%end%>
        </tr>
        <%end%>
    </tbody>
</table>

<p>
    <%= link_to "Create a new note", new_note_path %>
</p>