<h1>Edit note</h1>

<% if @note.errors.any? %>
    <h2>The following errors prevented the note from being saved</h2>
    <ul>
        <% @note.errors.full_messages.each do |msg|%>
            <li><%= msg %></li>
        <%end%>
    </ul>
<%end%>

<%= form_with(model: @note, local: true) do |f|%>
    <p>
        <%= f.label :title%><br/>
        <%= f.text_field :title%>
    </p>

    <p>
        <%= f.label :description%><br/>
        <%= f.text_area :description%>
    </p>

    <p>
        <%= f.submit%>
    </p>
<%end%>

<%= link_to  "Cancle and return to notes list", notes_path %>